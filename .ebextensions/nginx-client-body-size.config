files:
  "/etc/nginx/conf.d/client_max_body_size.conf":
    mode: "000644"  # Read and write permissions for owner, read-only for group and others
    owner: root
    group: root
    content: |
      # Set the maximum allowed size of client request body
      client_max_body_size 300M;
      
commands:
  restart_nginx:
    command: "sudo service nginx restart"  # Ensures NGINX reloads with the new configuration
